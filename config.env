# Local Kubernetes Environment Configuration
# Copy this file to config.local.env and customize for your environment

# Google Artifact Registry / GCR
REGISTRY_HOST="gcr.io"                    # gcr.io or REGION-docker.pkg.dev
# REGISTRY_HOST="us-docker.pkg.dev"       # Example for Artifact Registry
# REGISTRY_HOST="asia-docker.pkg.dev"     # Example for Asia region

# GCP Project (used in image paths)
GCP_PROJECT=""                            # Your GCP project ID

# Kubernetes namespace for applications
APPS_NAMESPACE="apps"

# Kind cluster name
CLUSTER_NAME="local-dev"

# ArgoCD
ARGOCD_PORT="8080"                        # Local port for ArgoCD UI
